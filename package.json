{
  "name": "express-typescript-api",
  "version": "1.0.0",
  "description": "Express Typescript API",
  "main": "index.js",
  "scripts": {
    "up": "docker-compose up",
    "down": "docker-compose down",
    "dev": "nodemon --watch '*.ts' --ext 'ts' --exec 'node' -r tsconfig-paths/register -r ts-node/register index.ts",
    "lint": "eslint . --ext .ts",
    "fix": "eslint . --fix --ext .ts",
    "precommit": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "yarn fix"
    ]
  },
  "author": "Stuart Haas",
  "license": "ISC",
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.8",
    "@types/express": "^4.17.9",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.0.1",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.3",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5"
  }
}
